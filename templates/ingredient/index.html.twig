{% extends 'base.html.twig' %}


{% block body %}
<div class="row">
   {% for data in data  %}
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{data.name}}</h5>
        <p class="card-text">{{data.type}}</p>
          {% if data.image is defined %}
            <img class="card-img-top" src="{{ asset ('images/')~ data.image.name}}" alt="Carcap">
         {% endif %}
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
    {% endfor %}
    <div class="m-3">
        <div class="form-group">
                    <a href="{{path('createIngredient')}}" class="btn btn-info mt-2 text-white">Ajouter un ingredient</a>
        </div>
        <div class="form-group">
                    <a href="{{path('ingredientForm')}}" class="btn btn-info mt-2 text-white">Acceder au tableau des ingredients </a>
        </div>
    </div>

</div>

{% endblock %}

