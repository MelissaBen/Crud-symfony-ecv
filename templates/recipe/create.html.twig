{% extends 'base.html.twig' %}

{% block body %}

<div class="container m-5">
    <div class="row">
        {% for message in app.flashes('sucess') %}
            <div class="alert alert-success">
            {{message}}
            </div>

        {% endfor %}
        <div class="col-md-6 offset-md-3">
           <h3 class="mt-5 mb-5"> Ajouter une recette </h3>
            {{form_start(form)}}
            <div class="form-group m-2">
                {{form_label(form.title)}}
                {{form_widget(form.title ,{'attr':{'class':'form-control'}})}}
            </div>    
            <div class="form-group m-2">
                {{form_label(form.subtitle)}}
                {{form_widget(form.subtitle ,{'attr':{'class':'form-control'}})}}
                {{form_row(form.preparationTime)}}
                {{form_row(form.cookingTime)}}
                {{ form_row(form.steps) }}
            </div> 
         
            <div class="form-group">
                <button class="btn btn-info mt-2 text-white">Enregistrer</button>
            </div>   

            <div class="form-group">
                <a href="{{path('recipe')}}" class="btn btn-info mt-2 text-white">Les recettes </a>
            </div>
            {{form_end(form)}}
        </div>
    </div>
    
</div>
{% endblock %}
